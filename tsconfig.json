{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "lib": ["dom", "es2016", "es2017"]
  },
  "include": ["./src/**/*", "node_modules/shimo-js-sdk-shared/src/**/*"]
}
